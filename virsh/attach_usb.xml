<hostdev mode='subsystem' type='usb' managed='yes'>
	<source>
		<vendor id='0x090c'/>
		<product id='0x1000'/>
	</source>
</hostdev>
<!-- vendor id and product id come from the command lsusb and selecting the desired device. e.g.
Bus 002 Device 004: ID 090c:1000
-->
<!-- then can run the following command to attach the device to the running VM desktop: -->
<!-- virsh attach-device desktop \-\-file attach_usb.xml \-\-persistent -->
